<playlist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../TestConfig/playlist.xsd">
	<test>
		<testCaseName>elasticsearch_test</testCaseName>
        <command>docker run -v $(JDK_HOME):/java --name elasticsearch-test adoptopenjdk-elasticsearch-test:latest; \
                         docker exec elasticsearch-test bash -c "mkdir /extract; find . -name "*TEST*.xml" -type f -exec cp {} /extract \;" \
			 docker cp elasticsearch-test:/extract $(REPORTDIR)/external_test_reports; \                  
                         docker rm  elasticsearch-test
		$(TEST_STATUS)</command>
		<subsets>
			<subset>SE80</subset>
			<subset>SE90</subset>
		</subsets>
		<levels>
			<level>sanity</level>
		</levels>
		<groups>
			<group>external</group>
		</groups>
	</test>
</playlist>
